<tr>
	<td class="gravatar">
		<%= link_to gravatar_for(message.sender), message.sender %>
	</td>
	<td class="micropost">
		<span class="user">
			<%= link_to message.sender.name, message.sender %>
		</span>
		<span class="content"><%= message.content %></span>
		<span class="timestamp">
			Posted <%= time_ago_in_words(message.created_at) %> ago.
		</span>
	</td>
</tr>
